<div class="form-group mb-3">
    <label for="site" class="form-label">Site</label>
    <input required type="text" name="site" value="<%= profile.site %>" id="site" class="form-control">
</div>
<div class="form-group mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea type="text" name="description" id="description" class="form-control"><%= profile.description %></textarea>
</div>
<div class="form-group mb-4">
    <label for="url" class="form-label">Q&A Chatbot Url</label>
    <textarea required type="text" name="url" id="url" class="form-control"><%= profile.url %></textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>