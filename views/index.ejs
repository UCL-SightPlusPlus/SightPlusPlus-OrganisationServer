<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <title>Sight++ Organization Server</title>
</head>
<body class="bg-light">
  <!-- heading -->
  <%- include('_heading') %>
  <!-- heading -->
  
  <div class="container">
    <div class="mt-5">
      <h3 class="text-muted">Server Profiles</h3>
    </div>
    <% if(profiles.length > 0){ %>
      <% profiles.forEach(profile => { %>
        <div class="card mt-4 shadow">
          <div class="card-body">
            <h4 class="card-title"><%= profile.site_name.toUpperCase() %></h4>
            <table width="70%" class="mt-3">
              <% profile.devices.forEach(device => { %>
                <tr>
                  <td class="card-text text-muted mb-2">ID: <%=device._id%></td>
                  <td class="card-text text-muted mb-2">Device: <%= device.deviceType %></td>
                  <td class="card-text text-muted mb-2">Location: <%= device.deviceLocation %></td>
                  <% if(device.running == 1){ %>
                    <td class="card-text text-muted mb-2">State: Running</td>
                  <% } else if (device.running == 0) {%>
                    <td class="card-text text-muted mb-2">State: Down</td>
                  <% } %>
                </tr>
              <% }); %>
            </table>
            <div class="mt-3">
              <% if(profile.url != null && profile.url != '') { %>
                <a href="<%= profile.url %>">Go to chatbot page >></a>
                <div style="text-align:right;float:right;">
                  <a href="profile/edit/<%= profile._id %>" class="btn btn-primary">Edit Chatbot Link</a>
                </div>
              <% } else { %>
                <div style="text-align:right;float:right;">
                  <a href="profile/edit/<%= profile._id %>" class="btn btn-primary">Add Chatbot Link</a>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="card mt-4 shadow">
        <div class="card-body">
          <p class="text-muted">Oops, no server profiles for now.</p>
        </div>
      </div>
    <% } %>
  </div>

  <!-- Footer -->
  <%- include('_footer') %>
  <!-- Footer -->
</body>
</html>